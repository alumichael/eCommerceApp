<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/product_layout"
    android:layout_width="match_parent"
    android:padding="@dimen/size_five"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/size_three"
        android:layout_marginTop="@dimen/size_two"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/transact_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREDIT WALLET"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:id="@+id/transact_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount: NGN 500"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    />


            </LinearLayout>


                <TextView
                    android:id="@+id/transact_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successful"
                    android:textColor="@color/colorWhite"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textSize="15sp"
                    android:background="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>